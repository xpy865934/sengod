<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sengod.sengod.ui.activity.StartActivity">

    <LinearLayout
        android:id="@+id/ll_start_first"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/logo"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_start_second"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_start_first"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:background="#D8D8D8" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llThree"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_start_second"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_height="150dp">
        <Button
            android:id="@+id/btn_start"
            android:text="@string/activity_start_btn_start"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_start_shape"
            />
    </LinearLayout>

</RelativeLayout>
