<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_rectifying_operation_first"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EAE16D"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_data_record" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/activity_rectifying_operation_title"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/param_setting"
            android:textColor="@color/colorBlack"
            android:visibility="gone"
            android:textSize="14sp" />
    </RelativeLayout>

    <view
        class="android.view.View"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/rl_rectifying_operation_first"
        android:background="@drawable/activity_main_title_shadow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_rectifying_operation_second"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/rl_rectifying_operation_first"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <com.sengod.sengod.ui.customerview.CircleController
            android:id="@+id/cc_top_view"
            android:layout_width="128dp"
            android:layout_marginLeft="10dp"
            android:layout_height="128dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_no_rectifying_operation_address"
                        android:textColor="@color/colorBlack"
                        android:textSize="26sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_no_rectifying_operation_address_math"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_no_rectifying_operation_left"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edi_address_x"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:focusable="false"
                        android:layout_marginTop="0dp"
                        android:hint="00000000" />
                    <EditText
                        android:id="@+id/edi_address_y"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:focusable="false"
                        android:layout_marginTop="5dp"
                        android:hint="00000000" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/activity_no_rectifying_operation_coordinate"
                        android:textColor="@color/colorBlack"
                        android:textSize="26sp"
                        android:id="@+id/textView" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/activity_no_rectifying_operation_coordinate_math"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_no_rectifying_operation_right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edi_address_c_x"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            android:focusable="false"
                            android:hint="00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/activity_no_rectifying_coordinate_unit1"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edi_address_c_y"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            android:focusable="false"
                            android:hint="00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/activity_no_rectifying_coordinate_unit1"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edi_address_angle"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            android:focusable="false"
                            android:hint="00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/activity_no_rectifying_coordinate_unit2"
                            android:textColor="@color/colorWhite"
                            android:textSize="22sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_rectifying_operation_three"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_rectifying_operation_second">
        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#009688"
                android:gravity="center"
                android:text="@string/activity_no_rectifying_operation_address_qrcode"
                android:id="@+id/btn_address_qrcode"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#009688"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/activity_no_rectifying_operation_shelves_qrcode"
                android:id="@+id/btn_shelf_qrcode"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_no_rectifying_operation_left"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="@string/activity_no_rectifying_operation_shelves_id"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:id="@+id/edi_shelf_id"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:focusable="false"
                    android:hint="00000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_no_rectifying_operation_right"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:focusable="false"
                        android:id="@+id/edi_shelf_c_x"
                        android:hint="00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/activity_no_rectifying_coordinate_unit1"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edi_shelf_c_y"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:focusable="false"
                        android:hint="00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/activity_no_rectifying_coordinate_unit1"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edi_shelf_angle"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:focusable="false"
                        android:hint="00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/activity_no_rectifying_coordinate_unit2"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/ll_rectifying_operation_four"
        android:layout_below="@+id/ll_rectifying_operation_three"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_turn_left_shape_up"
            android:text="@string/activity_no_rectifying_operation_turn_left"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:id="@+id/btn_turn_left" />

        <Button
            android:layout_width="150dp"
            android:background="@drawable/btn_turn_right_shape_up"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:text="@string/activity_no_rectifying_operation_turn_right"
            android:id="@+id/btn_turn_right"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_rectifying_operation_four">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/linearlayout_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="@string/activity_rectifying_operation_devi_correction_P"/>

                <EditText
                    android:id="@+id/edi_c_p"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/linearlayout_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="@string/activity_rectifying_operation_devi_correction_L"/>

                <EditText
                    android:id="@+id/edi_c_l"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorWhite"
                     />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:background="@drawable/linearlayout_center_border">
            <com.sengod.sengod.ui.customerview.CircleControllerNoCenter
                android:id="@+id/ccnc_bottom"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="visible"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/linearlayout_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="@string/activity_no_rectifying_distance"
                    android:id="@+id/textView2" />

                <EditText
                    android:id="@+id/edi_distance"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/linearlayout_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="@string/activity_no_rectifying_speed"/>

                <EditText
                    android:id="@+id/edi_speed"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>