<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sengod.sengod.ui.activity.ParamSettingActivity">

    <RelativeLayout
        android:id="@+id/rl_param_setting_first"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/activity_param_setting_title"
            android:textColor="@color/colorBlack"
            android:textSize="25sp" />
    </RelativeLayout>

    <view
        class="android.view.View"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rl_param_setting_first"
        android:background="@drawable/activity_main_title_shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_param_setting_first"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_param_setting_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_param_setting_noload"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="@string/activity_param_setting_speed_up"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_noload_speedup"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:text="@string/activity_param_setting_speed_down"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_noload_speeddown"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />
                </LinearLayout>
            </LinearLayout>

            <view
                class="android.view.View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_param_setting_load"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="@string/activity_param_setting_speed_up"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_load_speedup"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:text="@string/activity_param_setting_speed_down"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_load_speeddown"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />
                </LinearLayout>
            </LinearLayout>

            <view
                class="android.view.View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_param_setting_lift"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="@string/activity_param_setting_height"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_lift_dispatch"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="20-50"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_param_setting_height_unit"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/activity_param_setting_speed"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_lift_speed"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_param_setting_speed_unit"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <view
                class="android.view.View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_param_setting_obstacle_detection"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="@string/activity_param_setting_speed_down_distance"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_speed_down_distance"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_param_setting_height_unit"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="@string/activity_param_setting_speed_down_acc"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_speed_down_acc"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />
                </LinearLayout>
            </LinearLayout>

            <view
                class="android.view.View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_param_setting_rotation_speed"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edi_rotate_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:hint="00"
                    android:lines="1" />

            </LinearLayout>

            <view
                class="android.view.View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/activity_param_setting_wheel_diameter"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="@string/activity_param_setting_wheel_left"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_wheel_left"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:text="@string/activity_param_setting_wheel_right"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edi_wheel_right"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="@string/edit_default_hint"
                        android:lines="1" />
                </LinearLayout>
            </LinearLayout>

            <view
                class="android.view.View"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#979797" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_param_setting_confirm"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_activitystart_selector"
                    android:text="@string/activity_param_setting_confirm"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
